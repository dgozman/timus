{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "shell",
      "label": "build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-stdlib=libc++",
        "-O2",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/out/${fileBasenameNoExtension}",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
      }
    },
  ]
}